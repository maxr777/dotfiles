general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "disk /"
order += "tztime local"

wireless _first_ {
        format_up = "WiFi"
        format_down = ""
}

ethernet _first_ {
        format_up = "Eth"
        format_down = ""
}

volume master {
        format = "%volume"
        format_muted = "muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
        format = "%percentage"
        format_down = "No battery"
}

disk "/" {
        format = "%avail"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
